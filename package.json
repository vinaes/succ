{
  "name": "succ",
  "version": "1.1.25",
  "description": "Local memory system for Claude Code - RAG with local or API embeddings",
  "type": "module",
  "bin": {
    "succ": "./dist/cli.js",
    "succ-mcp": "./dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "test": "vitest",
    "test:storage": "vitest --run src/lib/storage/",
    "test:storage:integration": "vitest --run src/lib/storage/**/*.integration.test.ts",
    "test:integration": "node tests/integration-llm.mjs",
    "test:integration:backends": "node tests/integration-llm-backends.mjs",
    "test:integration:skills": "node tests/integration-skills.mjs",
    "test:integration:sleep-agent": "node tests/integration-sleep-agent.mjs",
    "test:integration:all": "npm run test:integration && npm run test:integration:backends && npm run test:integration:skills && npm run test:integration:sleep-agent",
    "benchmark:storage": "tsx src/lib/storage/benchmark.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  },
  "keywords": [
    "claude",
    "claude-code",
    "memory",
    "rag",
    "embeddings",
    "ai"
  ],
  "author": "cpz",
  "license": "FSL-1.1-Apache-2.0",
  "dependencies": {
    "@huggingface/transformers": "^3.0.0",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@parcel/watcher": "^2.5.6",
    "@redactpii/node": "^1.0.16",
    "@types/inquirer": "^9.0.9",
    "better-sqlite3": "^11.0.0",
    "commander": "^12.0.0",
    "cross-spawn": "^7.0.6",
    "glob": "^10.0.0",
    "gray-matter": "^4.0.3",
    "inquirer": "^13.2.2",
    "is-installed-globally": "^1.0.0",
    "ora": "^9.1.0",
    "sqlite-vec": "^0.1.7-alpha.2",
    "zod": "^3.25.76"
  },
  "optionalDependencies": {
    "pg": "^8.13.0",
    "@qdrant/js-client-rest": "^1.12.0"
  },
  "devDependencies": {
    "@types/pg": "^8.11.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist",
    "hooks",
    "agents"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "onnxruntime-node": "1.25.0-dev.20260127-f83d4d06e4"
  }
}
