{
  "name": "@vinaes/succ",
  "version": "1.3.30",
  "description": "Semantic Understanding for Code Contexts â€” persistent memory for AI coding assistants (Claude Code, Cursor, Windsurf, Continue.dev)",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/cli.js",
  "types": "./dist/cli.d.ts",
  "exports": {
    ".": {
      "types": "./dist/cli.d.ts",
      "default": "./dist/cli.js"
    },
    "./api": {
      "types": "./dist/lib/public-api.d.ts",
      "default": "./dist/lib/public-api.js"
    },
    "./mcp": {
      "types": "./dist/mcp-server.d.ts",
      "default": "./dist/mcp-server.js"
    }
  },
  "bin": {
    "succ": "./dist/cli.js",
    "succ-mcp": "./dist/mcp-server.js"
  },
  "scripts": {
    "build": "prettier --check src/ && eslint src/ && tsc",
    "build:compile": "tsc",
    "dev": "tsx src/cli.ts",
    "test": "vitest",
    "test:storage": "vitest --run src/lib/storage/",
    "test:storage:integration": "vitest --run src/lib/storage/**/*.integration.test.ts",
    "test:integration": "node tests/integration-llm.mjs",
    "test:integration:backends": "node tests/integration-llm-backends.mjs",
    "test:integration:skills": "node tests/integration-skills.mjs",
    "test:integration:sleep-agent": "node tests/integration-sleep-agent.mjs",
    "test:integration:all": "npm run test:integration && npm run test:integration:backends && npm run test:integration:skills && npm run test:integration:sleep-agent",
    "benchmark:storage": "tsx src/lib/storage/benchmark.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "prepare": "npm run build:compile",
    "prepublishOnly": "npm run build && npm run lint"
  },
  "keywords": [
    "claude",
    "claude-code",
    "memory",
    "rag",
    "embeddings",
    "ai",
    "mcp",
    "semantic-search",
    "knowledge-graph",
    "cursor",
    "windsurf"
  ],
  "author": "vinaes",
  "license": "FSL-1.1-Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/vinaes/succ.git"
  },
  "homepage": "https://github.com/vinaes/succ#readme",
  "bugs": {
    "url": "https://github.com/vinaes/succ/issues"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.0.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@parcel/watcher": "^2.5.6",
    "@redactpii/node": "^1.0.16",
    "better-sqlite3": "^12.6.2",
    "commander": "^14.0.3",
    "cross-spawn": "^7.0.6",
    "glob": "^13.0.3",
    "gray-matter": "^4.0.3",
    "inquirer": "^13.2.2",
    "is-installed-globally": "^1.0.0",
    "onnxruntime-node": "1.24.1",
    "ora": "^9.3.0",
    "sqlite-vec": "0.1.7-alpha.2",
    "web-tree-sitter": "^0.26.5",
    "ws": "^8.19.0",
    "zod": "^3.25.76"
  },
  "optionalDependencies": {
    "@qdrant/js-client-rest": "^1.12.0",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.11.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js.map",
    "dist/**/*.d.ts.map",
    "!dist/**/*.test.*",
    "!dist/**/*.integration.*",
    "!dist/**/test-backends.*",
    "hooks",
    "agents"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "onnxruntime-node": "1.24.1"
  }
}
